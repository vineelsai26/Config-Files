{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"buildOptions": {
		"outDir": "dist"
	},
	"exclude": [
		"node_modules"
	]
}
